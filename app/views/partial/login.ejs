<title>LadieWork - Login</title>
<link rel="stylesheet" href="css/cadastro.css">

</head>

<body>
  <%- include("../partial/header") %>

    <body>

 

      <main>
        <form action="/login" method="post">
          <div class="form-step active">
            <h2>Que bom ver você de novo!</h2>

            <div class="content">
              <div class="input-wrapper">
                <label for="email">E-mail</label>
                <input id="email" name="email_usu" type="email" placeholder="Digite seu e-mail" required>
              </div>

              <div class="input-wrapper">
                <label for="password">Senha</label>
                <input id="password" name="senha_usu" type="password" placeholder="Digite sua senha" required>
              </div>
              <a href="">Esqueceu a senha?</a>
            </div>

            <div class="button-wrapper justify-end">
              <button type="submit" class="btn">Entrar</button>
            </div>
            <span class="ou">ou</span>
            <span class="donthave">Não tem uma conta? <a href="cadastro">Inscreva-se</a></span>
          </div>
        </form>


      </main>
    </body>